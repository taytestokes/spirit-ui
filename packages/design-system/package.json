{
  "name": "@spirit-ui/design-system",
  "version": "0.0.13",
  "description": "Design system and component library.",
  "homepage": "https://github.com/taytestokes/spirit-ui",
  "bugs": {
    "url": "https://github.com/taytestokes/spirit-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taytestokes/spirit-ui.git",
    "directory": "packages/design-system"
  },
  "license": "MIT",
  "author": "Tayte Stokes",
  "files": [
    "dist/**"
  ],
  "keywords": [
    "spirit-ui",
    "design system",
    "react",
    "components"
  ],
  "exports": {
    "./components": {
      "types": {
        "import": "./dist/components/index.d.mts",
        "require": "./dist/components/index.d.ts"
      },
      "require": "./dist/components/index.js",
      "import": "./dist/components/index.mjs"
    },
    "./styles": {
      "require": "./dist/styles/index.css",
      "import": "./dist/styles/index.css"
    },
    "./theme": {
      "require": "./dist/styles/index.js",
      "import": "./dist/styles/index.mjs"
    },
    "./tokens": {
      "require": "./dist/tokens/index.js",
      "import": "./dist/tokens/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "devDependencies": {
    "@vanilla-extract/esbuild-plugin": "^2.3.11",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@vanilla-extract/css": "^1.16.0",
    "@vanilla-extract/css-utils": "^0.1.4",
    "@vanilla-extract/recipes": "^0.5.5",
    "@vanilla-extract/sprinkles": "^1.6.3",
    "clsx": "^2.1.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
